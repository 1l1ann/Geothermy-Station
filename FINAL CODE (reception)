  lcd.print(temp1);
  lcd.setCursor(0, 1);
  lcd.print("Sensor 2 : ");
  lcd.print(temp2);
  delay(1000);
  lcd.clear();
  
  lcd.print("Sensor 3 : ");
  lcd.print(temp3);
  lcd.setCursor(0, 1);
  lcd.print("Sensor 4 : ");
  lcd.print(temp4);
